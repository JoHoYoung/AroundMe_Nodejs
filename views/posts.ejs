                                                                <a href='/posts/<%= Previous%>' aria-label="Previous">
        <span aria-hidden="true"><div class="circle_left"></div></span>
      </a>
                                                                    <%} else if(specific=="searchall"){%>
                                                                        <a href='/posts/search/all/<%= searchstr%>/<%= Previous %>' aria-label="Previous">
