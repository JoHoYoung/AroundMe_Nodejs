                                                <colgroup>
                                                    <col style="width: 58px;">

                                                    <col style="width: auto;">

                                                    <col style="width: 172px;">
                                                </colgroup>
                                                <tbody>
                                                    <%for(var i=0;i<results.length;i++){%>
                                                        <tr class="dex">
                                                            <td>
                                                                <%=(num-1)*10+i+1 %>
                                                            </td>
                                                            <td>
                                                                <a href="/post/<%= results[i]._doc._id%>/<%= Upper%>">
